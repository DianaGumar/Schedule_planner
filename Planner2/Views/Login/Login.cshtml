@model PlannerLib.Model.User
@{
    ViewData["Title"] = "Login";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


    <form class="form-signin col-md-4" asp-action="Login">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

        <div class="form-group">
            <input asp-for="Email" class="form-control"  placeholder="Email address" required autofocus />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" type="password" placeholder="Password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <p></p>
        <div class="text-left">
            <button class="btn btn-outline-light"><img src="https://img.icons8.com/color/24/000000/google-logo.png"></button>
            <button class="btn btn-primary d-inline btn-primary" type="submit">Sign in</button>
            <a class="navbar-brand" asp-action="Reg">Registrate</a>
        </div>
        

        <p></p>
        <p></p>

        <a class="navbar-brand" href="/Task/Main">main</a>

    </form>