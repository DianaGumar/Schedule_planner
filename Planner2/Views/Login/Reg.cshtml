@model PlannerLib.Model.User
@{
    ViewData["Title"] = "Reg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container col-4">

    <form class="form-check mr-4" asp-action="Reg">
        <div class="form-group row">
            <h4 class="mb-4">Registrate</h4>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="text-left">

            <div class="form-group row">
                <label asp-for="Name" class="label col-4"></label>
                <input asp-for="Name" class="form-control col" placeholder="Name" required autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Password" class="label col-4"></label>
                <input asp-for="Password" class="form-control col" type="password" placeholder="Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Email" class="label col-4"></label>
                <input asp-for="Email" class="form-control col" placeholder="you@example.com" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label asp-for="Phone" class="label col-4"></label>
                @*<small class="text-muted">(optional)</small>*@
                <input asp-for="Phone" class="form-control col" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>

        <p></p>

        <div class="form-group row">
            <input type="submit" value="Create" class="btn btn-primary my-2 col-3" />
            <a class="navbar-brand col-4" asp-action="Login">log in</a>
        </div>

    </form>


</div>




@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}