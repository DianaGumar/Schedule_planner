@model PlannerLib.Model.Task
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<hr class="mb-2">

<form class="form-signin  text-center col-md-6" asp-action="Create">
    <h4 class="mb-3">Create task</h4>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="text-left">

        <div class="form-group">
            @*<label asp-for="Name" class="control-label"></label>*@
            <input asp-for="Name" class="form-control" placeholder="name" required autofocus />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            @*<label asp-for="Description" class="control-label"></label>*@
            @*<input asp-for="Description" class="form-control" />*@
            <textarea asp-for="Description" class="form-control" placeholder="description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Priority" class="control-label"></label>
            <select class="custom-select mr-sm-2" asp-for="Priority">
                <option value="0">Urgent</option>
                <option value="1">High</option>
                <option value="2" selected>Medium</option>
                <option value="3">Low</option>
            </select>
            @*
            <input asp-for="Priority" class="form-control" />*@
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Label" class="control-label"></label>
            <input asp-for="Label" class="form-control" placeholder="label"/>
            <span asp-validation-for="Label" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Deadline" class="control-label"></label>
            <input asp-for="Deadline" class="form-control" />
            <span asp-validation-for="Deadline" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time_volume" class="control-label">How long will it take</label>
            <select class="custom-select mr-sm-2" asp-for="Time_volume">
                <option value="1">less than 1 hours</option>
                <option value="3">less than 3 hours</option>
                <option value="5">more than 3 hours</option>
            </select>


            @*<input asp-for="Time_volume" class="form-control" />*@
            <span asp-validation-for="Time_volume" class="text-danger"></span>
        </div>

    </div>

    <p></p>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary my-2" />
        <a class="navbar-brand" asp-action="Main">Cancel</a>
    </div>


</form>