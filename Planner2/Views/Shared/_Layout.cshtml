@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Planner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://apis.google.com/js/platform.js" async defer></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar-dark bg-dark p-0">
            <div class="container">
                <a class="navbar-brand" asp-action="Login">Planner</a>
                <div class="float-lg">guest</div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="border-top footer text-muted text-center" >
        <div class="container">
            2020 - Planner - autor <a href="https://www.linkedin.com/in/diana-gumar/">Gumar Diana</a>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
